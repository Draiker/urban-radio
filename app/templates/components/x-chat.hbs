<div class='x-chat-inner'>

  <div class="x-chat-icon"></div>

  <div class="x-chat-msgs-wrap">
    {{#each messages as |message|}}
      <div class="x-chat-message">
        <div class="x-chat-user-icon">
          <img class="x-chat-user-icon-img" src={{message.userIcon}}>
        </div>
        <div class="x-chat-user-other">
          <div class="x-chat-user-name">{{message.userName}}</div>
          <div class="x-chat-user-message">{{message.body}}</div>
        </div>
      </div>
    {{/each}}
  </div>


  <div class="x-chat-bot">

    <div class="x-chat-bot-icon">
      <img class="x-chat-bot-icon-img" src='assets/x-chat-user-icon.png'>
    </div>
    <div class="x-chat-bot-other clearfix">
      {{textarea class="x-chat-bot-textarea" value=messageBody  placeholder='enter message' type='text'}}
      <button class="x-chat-bot-btn" {{action 'sendMessage'}}>
        <span class='x-chat-bot-btn-icon'></span>
        Опублікувати
      </button>
    </div>

  </div>

</div>

